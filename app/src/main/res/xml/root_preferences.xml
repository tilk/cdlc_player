<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Display">
        <SwitchPreference
            android:defaultValue="false"
            android:key="reversedFretboard"
            android:title="Reversed fretboard"
            app:useSimpleSummaryProvider="true"
            />
    </PreferenceCategory>

    <PreferenceCategory app:title="Sound">
        <ListPreference
            android:defaultValue="on_beats"
            android:entries="@array/beat_entries"
            android:entryValues="@array/beat_values"
            android:key="click"
            android:title="Click"
            app:useSimpleSummaryProvider="true"
            />
    </PreferenceCategory>

</PreferenceScreen>